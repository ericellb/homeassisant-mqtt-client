{
  "name": "homeassistant-mqtt-client",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "bin": {
    "homeassistant_mqtt_client": "bin/index.js"
  },
  "scripts": {
    "lint": "./node_modules/.bin/eslint --ignore-path .gitignore .",
    "build": "tsc",
    "build:exe:server": "pkg ./bin/server/index.js --targets node12-win-x64 --output binaries/win/homeassistant-mqtt-server-win",
    "build:exe:cli": "pkg ./bin/cli/index.js --targets node12-win-x64 --output binaries/win/homeassistant-mqtt-cli-win",
    "build:exe": "yarn build:exe:server && yarn build:exe:cli",
    "start": "ts-node src/index.ts",
    "test": "mocha ./src/**/*.spec.ts",
    "test:integration": "mocha ./src/**/*.test.ts",
    "test:watch": "jest --watch",
    "prepush": "npm run lint && npm test",
    "precommit": "npm run lint && npm test"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/chai-as-promised": "^7.1.3",
    "chai": "^4.3.1",
    "chai-as-promised": "^7.1.1",
    "dotenv": "^8.2.0",
    "mocha": "^8.3.0",
    "mqtt": "^4.2.6",
    "pino": "^6.11.1",
    "pino-pretty": "^4.6.0",
    "sinon": "^9.2.4"
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.31",
    "@types/pino": "^6.3.6",
    "@types/sinon": "^9.0.10",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "pkg": "^4.4.9",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "pkg": {
    "assets": "./node_modules/*",
    "scripts": "./bin/**/*.js"
  }
}
